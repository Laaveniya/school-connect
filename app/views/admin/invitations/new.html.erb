<h1>Onboard</h1>

<%= form_with(model: @user, url: admin_invitations_path, method: :post, id: 'invitation-form') do |f| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>">
          <%= value %>
        </div>
      <% end %>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email, style: "display: block" %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :role, style: "display: block" %>
    <%= f.select :role, options_for_select([['Select role', '']] + User.roles.keys.map { |key| [key.humanize, key] }, selected: nil), id: 'user_role' %>

  </div>

  <div id="school-select">
    <%= f.label :school, style: "display: block"  %>
    <%= f.select :school_id, options_for_select([['Select school', '']] + School.pluck(:name, :id).map { |name, id| [name, id] }, selected: nil)%>
  </div>

  <%= f.submit 'Invite', id: 'invite-button' %>
<% end %>

<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('invitation-form');
        const inviteButton = document.getElementById('invite-button');

        form.addEventListener('submit', (event) => {
            const emailField = document.getElementById('user_email');
            const roleField = document.getElementById('user_role');
            const schoolField = document.getElementById('user_school_id');

            if (!emailField.value || !roleField.value || (roleField.value !== 'admin' && !schoolField.value)) {
                event.preventDefault();
                alert('Please fill in all required fields.');
            }
        });
    });
</script>
